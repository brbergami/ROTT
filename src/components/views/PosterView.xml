<?xml version="1.0" encoding="utf-8" ?>
<component name="PosterView" extends="Group" >
    <interface>
        <field id="close" type="string" />
        <field id="imdbid" type="string" />
        <field id="playVideo" type="boolean" />
    </interface>
    <children>
        <Poster
            id="poster"
            />
        <Rectangle
            id="divider"
            />
        <LayoutGroup
            id="secondHalfGroup" >
            <Label
                id="contentTitle"
                />
            <Label
                id="contentYear"
                />
            <Label
                id="contentDescription"
                />
        </GroupLayout>
    </children>
</component>
